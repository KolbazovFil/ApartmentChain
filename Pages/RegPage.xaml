<Page x:Class="ApartmentChain.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApartmentChain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Регистрация" Background="White">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Регистрация" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource TextBlockStyle}" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="Имя" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>
        <TextBlock Text="Фамилия" Grid.Row="2" Grid.Column="0" Style="{ StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>
        <TextBlock Text="Логин" Grid.Row="3" Grid.Column="0" Style="{StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>
        <TextBlock Text="Пароль" Grid.Row="4" Grid.Column="0" Style="{StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>
        <TextBlock Text="Подтверждение пароля" Grid.Row="5" Grid.Column="0" Style="{StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>
        <TextBlock Text="Дата рождения" Grid.Row="6" Grid.Column="0" Style="{StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>
        <TextBlock Text="Номер телефона" Grid.Row="7" Grid.Column="0" Style="{StaticResource TextBlockStyle}" Width="200" HorizontalAlignment="Right"/>

        <TextBox Name="NameTextBox" ToolTip="Введите имя" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>
        <TextBox Name="SurnameTextBox" ToolTip="Введите фамилию" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>
        <TextBox Name="LoginTextBox" ToolTip="Введите логин" Grid.Row="3" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>
        <PasswordBox Name="PasswordBox" ToolTip="Введите пароль" Grid.Row="4" Grid.Column="1" Style="{StaticResource PasswordBoxStyle}"/>
        <PasswordBox Name="ConfirmPasswordBox" ToolTip="Подтвердите пароль" Grid.Row="5" Grid.Column="1" Style="{StaticResource PasswordBoxStyle}"/>
        <DatePicker Name="BirthdayDatePicker" Grid.Row="6" ToolTip="Введите электронную почту" Grid.Column="1" Style="{StaticResource DatePickerStyle}"/>
        <TextBox Name="PhoneNumberTextBox" ToolTip="Введите номер телефона" Grid.Row="7" Grid.Column="1" Style="{StaticResource TextBoxStyle}"/>

        <Button Name="CancelButton" Content="Отмена" ToolTip="Нажмите чтобы вернуться назад" Grid.Row="8" Grid.Column="1" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Left" Margin="10,0" Click="CancelButton_Click"/>
        <Button Name="RegButton" Content="Регистрация" ToolTip="Нажмите чтобы зарегистрироваться" Grid.Row="8" Grid.Column="0" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Margin="10,0" Click="RegButton_Click"/>

    </Grid>
</Page>
