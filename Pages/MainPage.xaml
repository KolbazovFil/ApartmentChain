<Page x:Class="ApartmentChain.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApartmentChain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Name="MainPagePhoto" Grid.Row="0" Grid.RowSpan="2" Source="../Resources/MainPagePhoto.jpg" Style="{StaticResource ImageStyle}"/>

        <StackPanel Name="MenuStackPanel" Orientation="Horizontal">
            <Image Name="LogoPhoto" Cursor="Hand" Source="../Resources/Logo.png" MouseLeftButtonUp="LogoPhoto_MouseLeftButtonUp"/>
            
            <Menu Style="{StaticResource MenuStyle}">
                <MenuItem Header="Проекты" Name="ProjectMenu" Style="{StaticResource MenuItemStyle}">
                    <MenuItem Header="Беговая" Name="BegovayaMenu"/>
                    <Separator Background="#514422"/>
                    <MenuItem Header="Спиридоновка" Name="SpiridonovkaMenu"/>
                </MenuItem>
                <MenuItem Header="Новости" Name="NewsMenu" Style="{StaticResource MenuItemStyle}">
                    <Separator/>
                </MenuItem>
                <MenuItem Header="Каталог" Name="CatalogMenu" Style="{StaticResource MenuItemStyle}"/>
            </Menu>
        </StackPanel>

        <Button Content="OK" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Page>
