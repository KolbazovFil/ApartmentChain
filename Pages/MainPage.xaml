<Page x:Class="ApartmentChain.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApartmentChain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Name="MainPagePhoto" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Source="../Resources/MainPagePhoto.jpg" Style="{StaticResource ImageStyle}"/>

        <StackPanel Name="MenuStackPanel" Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2">
            <Image Name="LogoPhoto" Cursor="Hand" Source="../Resources/Logo.png" MouseLeftButtonUp="LogoPhoto_MouseLeftButtonUp"/>

            <Menu Style="{StaticResource MenuStyle}">
                <MenuItem Header="Города" ToolTip="Выберите город" Style="{StaticResource MenuItemStyle}">
                    <MenuItem Header="Москва"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Санкт-Петербург"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Сочи"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Казань"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Екатеринбург"/>
                </MenuItem>

                <MenuItem Header="Локации" ToolTip="Выберите локацию" Style="{StaticResource MenuItemStyle}">
                    <MenuItem Header="Страны"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Города"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Регионы"/>
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <MenuItem Header="Улицы"/>
                </MenuItem>

                <MenuItem Header="Отзывы" ToolTip="Нажмите для просмотра отзывов" Style="{StaticResource MenuItemStyle}"/>
                <MenuItem Header="Справка" ToolTip="Нажмите для просмотра справки" Style="{StaticResource MenuItemStyle}"/>
                <MenuItem Header="Выход" ToolTip="Нажмите для завершения работы с приложением" Style="{StaticResource MenuItemStyle}"/>
            </Menu>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Name="Auth" Content="Войти" Width="80" Height="40" ToolTip="Войдите или создайте аккаунт, чтобы использовать все возможности сервиса" Style="{StaticResource ButtonStyle}"/>
            <StackPanel Name="ProfilePanel" Orientation="Horizontal" Visibility="Collapsed">
                <Button Name="ProfileButton" Width="130" Height="40" Style="{StaticResource ButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/user_profile.ico" Height="25" Width="25"/>
                        <TextBlock Text="Профиль" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Фильтры" Style="{StaticResource TextBlockStyle}" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Минимальная цена" Style="{StaticResource TextBlockStyle}" />
            <TextBox Name="MinPriceTextBox" ToolTip="Введите минимальную цену для фильтрации в формате 4000,00" Style="{StaticResource TextBoxStyle}" Width="200" Height="30"/>
            <TextBlock Text="Максимальная цена" Style="{StaticResource TextBlockStyle}"/>
            <TextBox Name="MaxPriceTextBox" ToolTip="Введите максимальную цену для фильтрации в формате 4000,00" Style="{StaticResource TextBoxStyle}" Width="200" Height="30"/>
            <Button Content="Применить фильтр" ToolTip="Нажмите для применения фильтрации" Style="{StaticResource ButtonStyle}" Width="190" Margin="0,10"/>
        </StackPanel>

        <ListView Name="ApartList" Grid.Row="1" Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="Transparent">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="450"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Border DataContext="{Binding PhotosViewModel}" Grid.Row="0" HorizontalAlignment="Center" Width="500">
                            <Grid>
                                <Image Source="{Binding CurrentPhoto}" Stretch="Fill"/>
                                <Button Content="◀" Command="{Binding PrevPhotoCommand}" HorizontalAlignment="Left" Style="{StaticResource CommandButtonStyle}"/>
                                <Button Content="▶" Command="{Binding NextPhotoCommand}" HorizontalAlignment="Right" Style="{StaticResource CommandButtonStyle}"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Height="30" Width="500">
                            <Rectangle Width="5"/>
                            <TextBlock Text="{Binding Cities}" Style="{StaticResource TextBlockStyle}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Address}" Style="{StaticResource TextBlockStyle}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Building}" Style="{StaticResource TextBlockStyle}" FontWeight="Bold"/>
                            <Rectangle Width="220"/>
                            <TextBlock Text="{Binding Price}" Style="{StaticResource TextBlockStyle}" FontWeight="Bold"/>
                            <TextBlock Text=" ₽ в сутки" Style="{StaticResource TextBlockStyle}" FontWeight="Bold"/>
                        </StackPanel>
                    
                        <Button Name="ToBookButton" Content="Забронировать" ToolTip="Перейти к бронированию" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

    </Grid>
</Page>
