<Page x:Class="ApartmentChain.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApartmentChain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Background="White">

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Авторизация пользователя" Grid.Row="0" Style="{StaticResource TextBlockStyle}" HorizontalAlignment="Center" FontWeight="Bold"/>

            <Grid Grid.Row="1" Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Логин" Grid.Column="0" Style="{StaticResource TextBlockStyle}"/>
                <TextBox Name="LoginTextBox" Grid.Column="1" ToolTip="Введите логин" Style="{StaticResource TextBoxStyle}"/>
            </Grid>

            <Grid Grid.Row="2" Width="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Пароль" Grid.Column="0" Style="{StaticResource TextBlockStyle}"/>
                    <PasswordBox Name="PasswordBox" Grid.Column="1" ToolTip="Введите пароль" Style="{StaticResource PasswordBoxStyle}"/>
                </Grid>

            <Button Name="RegButton" ToolTip="Нажмите чтобы зарегистрироваться" Content="Регистрация" Grid.Row="4" Style="{StaticResource ButtonStyle}" Click="RegButton_Click"/>
            <Button Name="EnterButton" ToolTip="Нажмите чтобы войти" Content="Вход" Grid.Row="3" Style="{StaticResource ButtonStyle}" Click="EnterButton_Click"/>
            <Button Name="CancelButton" ToolTip="Нажмите чтобы отменить" Content="Отмена" Grid.Row="5" Style="{StaticResource ButtonStyle}" Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Page>
